<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantallamiperfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <View
        android:id="@+id/fondoverde"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="#1C756C" />

    <TextView
        android:id="@+id/tituloincidencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Crear Usuario"
        android:fontFamily="@font/poppins"
        android:textAppearance="@style/tituloIncidencias"
        android:gravity="top" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/motivoIncidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fondoverde"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:hint="Correo Electrónico">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/motivoIncidenciaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textoInformativoCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/motivoIncidencia"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Para crear una cuenta de Administrador utilice el dominio @shopytest.com" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoInformativoCorreo"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:hint="Nombre de Usuario">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nombreUsuarioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/escribirContraseña1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreUsuario"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:hint="Contraseña">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/escribirContraseña1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/escribirContraseña2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/escribirContraseña1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:hint="Repetir Contraseña">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/escribirContraseña2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/guardardatos"
        android:layout_width="283dp"
        android:layout_height="40dp"
        android:layout_below="@id/escribirContraseña2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/guardardatos" />

    <TextView
        android:id="@+id/textoguardardatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/escribirContraseña2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/poppins"
        android:text="@string/botonguardarcambiosperfil"
        android:textAppearance="@style/textoguardardatos"
        android:gravity="top" />

    <ImageView
        android:id="@+id/volver"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/volverperfil" />

</RelativeLayout>
